<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.Pages.EditingTextPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry 
                Placeholder="Entre su dato"
                HorizontalOptions="Fill"
                Keyboard="Email"
                />
            <Entry 
                Placeholder="Entre su dato"
                HorizontalOptions="Fill"
                Keyboard="Numeric"
                />
            <Entry 
                Placeholder="Entre su dato"
                HorizontalOptions="Fill"
                Keyboard="Chat"
                />
            <Editor
                Placeholder="Entre su datos para el editor"
                    VerticalOptions="FillAndExpand"                
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>